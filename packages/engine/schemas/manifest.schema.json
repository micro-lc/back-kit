{
  "$id": "https://raw.githubusercontent.com/micro-lc/back-kit/main/packages/engine/schemas/manifest.schema.json#",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Manifest",
  "definitions": {
    "method": {
      "title": "Method",
      "type": "string",
      "default": "GET",
      "enum": ["GET", "POST", "PATCH", "PUT", "DELETE", "OPTIONS", "HEAD"]
    },
    "url": {
      "title": "FetchUrl",
      "type": "object",
      "properties": {
        "origin": { "type": "string" },
        "pathname": { "type": "string" }
      },
      "additionalProperties": false,
      "required": ["pathname"]
    },
    "handler": {
      "title": "FetchHandler",
      "type": "object",
      "instanceOf": "Function",
      "tsType": "(info: URL, init?: RequestInit | undefined) => Promise<Response>"
    },
    "handlerWithContext": {
      "title": "FetchHandlerWithContext",
      "type": "object",
      "instanceOf": "Function",
      "tsType": "(info: URL, init?: RequestInit | undefined, context: Record<string, unknown>) => Promise<Response>"
    },
    "fetch": {
      "title": "Fetch",
      "type": "array",
      "default": [],
      "items": {
        "type": "object",
        "properties": {
          "url": { "$ref": "#/definitions/url" },
          "method": { "$ref": "#/definitions/method" },
          "handler": { "$ref": "#/definitions/handler" }
        },
        "required": ["url"]
      }
    },
    "fetchWithContext": {
      "title": "FetchWithContext",
      "type": "array",
      "default": [],
      "items": {
        "type": "object",
        "properties": {
          "url": { "$ref": "#/definitions/url" },
          "method": { "$ref": "#/definitions/method" },
          "handler": { "$ref": "#/definitions/handlerWithContext" }
        },
        "required": ["url"]
      }
    }
  },
  "type": "object",
  "properties": {
    "label": {
      "$ref": "https://raw.githubusercontent.com/micro-lc/back-kit/main/packages/engine/schemas/mia.schema.json#/definitions/localized-text"
    },
    "description": {
      "$ref": "https://raw.githubusercontent.com/micro-lc/back-kit/main/packages/engine/schemas/mia.schema.json#/definitions/localized-text"
    },
    "type": {
      "enum": ["layout", "connector", "adapter"]
    },
    "mocks": {
      "type": "object",
      "properties": {
        "fetch": {
          "oneOf": [
            { "$ref": "#/definitions/fetchWithContext" },
            {
              "type": "object",
              "instanceOf": "Function",
              "tsType": "((context: Record<string, unknown>) => Fetch)"
            }
          ]
        }
      }
    },
    "properties": {
      "type": "object",
      "additionalProperties": {
        "$ref": "https://raw.githubusercontent.com/micro-lc/back-kit/main/packages/engine/schemas/mia.schema.json#"
      }
    }
  }
}
