{
  "$id": "https://raw.githubusercontent.com/micro-lc/back-kit/main/packages/engine/schemas/manifest.schema.json#",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Manifest",
  "definitions": {
    "method": {
      "title": "Method",
      "type": "string",
      "default": "GET",
      "enum": ["GET", "POST", "PATCH", "PUT", "DELETE", "OPTIONS", "HEAD"]
    },
    "fetch": {
      "type": "array",
      "default": [],
      "items": {
        "type": "object",
        "properties": {
          "url": {
            "type": "object",
            "properties": {
              "origin": { "type": "string" },
              "pathname": { "type": "string" }
            },
            "additionalProperties": false,
            "required": ["pathname"]
          },
          "method": { "$ref": "#/definitions/method" },
          "handler": {
            "type": "object",
            "instanceOf": "Function",
            "tsType": "(info: URL, init?: RequestInit, context: Record<string, unknown>) => Promise<Response>"
          }
        },
        "required": ["url"]
      }
    }
  },
  "type": "object",
  "properties": {
    "label": {
      "$ref": "https://raw.githubusercontent.com/micro-lc/back-kit/main/packages/engine/schemas/mia.schema.json#/definitions/localized-text"
    },
    "description": {
      "$ref": "https://raw.githubusercontent.com/micro-lc/back-kit/main/packages/engine/schemas/mia.schema.json#/definitions/localized-text"
    },
    "type": {
      "enum": ["layout", "connector", "adapter"]
    },
    "mocks": {
      "type": "object",
      "properties": {
        "fetch": { "$ref": "#/definitions/fetch" }
      }
    },
    "properties": {
      "type": "object",
      "additionalProperties": {
        "$ref": "https://raw.githubusercontent.com/micro-lc/back-kit/main/packages/engine/schemas/mia.schema.json#"
      }
    }
  }
}
