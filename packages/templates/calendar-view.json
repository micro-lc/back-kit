{
  "$id": "https://raw.githubusercontent.com/micro-lc/back-kit/main/packages/templates/calendar-view.json#",
  "$schema": "https://raw.githubusercontent.com/micro-lc/back-kit/main/packages/engine/schemas/template.schema.json#",
  "meta": {
    "label": {
      "en": "Calendar view",
      "it": "Vista a calendario"
    },
    "description": {
      "en": "A page built to visualize data on a calendar. It provides filtering, exporting, pagination, creation, and editing functionalities.",
      "it": "Una pagina costruita per visualizzare i dati su un calendario. Offre funzionalit√† di filtraggio, esportazione, paginazione, creazione e modifica dei dati."
    },
    "doc-link": "https://docs.mia-platform.eu/docs/business_suite/backoffice-configurator/compose_pages#calendar-view",
    "variables": {
      "BACK_KIT_VERSION": {
        "default": "1.3.15"
      }
    },
    "configurator-meta": {
      "sharedPropertiesTypeMap": {
        "dataSchema": "back-kit/data-schema"
      }
    }
  },
  "template": {
    "definitions": {
      "dataSchema": {
        "type": "object",
        "properties": {
          "_id": {
            "type": "string"
          },
          "__STATE__": {
            "type": "string",
            "default": "PUBLIC",
            "enum": [
              "PUBLIC",
              "DRAFT",
              "TRASH",
              "DELETED"
            ]
          },
          "title": {
            "type": "string",
            "label": "Title"
          },
          "startDate": {
            "type": "string",
            "format": "date-time",
            "label": "Start date",
            "dateOptions": {
              "displayFormat": "DD/MM/YYYY, HH:mm"
            }
          },
          "endDate": {
            "type": "string",
            "format": "date-time",
            "label": "End date",
            "dateOptions": {
              "displayFormat": "DD/MM/YYYY, HH:mm"
            }
          }
        },
        "required": [
          "title",
          "startDate",
          "endDate"
        ]
      }
    },
    "content": {
      "content": [
        {
          "content": [
            {
              "tag": "div",
              "content": [
                {
                  "attributes": {
                    "style": "display: flex; gap: 10px;"
                  },
                  "content": [
                    {
                      "properties": {
                        "content": "Page title"
                      },
                      "tag": "bk-title"
                    },
                    {
                      "attributes": {
                        "style": "align-self: end;"
                      },
                      "tag": "bk-refresh-button"
                    }
                  ],
                  "tag": "div"
                },
                {
                  "tag": "div",
                  "attributes": {
                    "style": "flex-grow: 1;"
                  }
                },
                {
                  "properties": {
                    "placeholder": "Search..."
                  },
                  "tag": "bk-search-bar"
                },
                {
                  "properties": {
                    "iconId": "DownloadOutlined",
                    "content": "Export",
                    "clickConfig": {
                      "type": "event",
                      "actionConfig": {
                        "label": "export-data",
                        "payload": {}
                      }
                    }
                  },
                  "tag": "bk-button"
                },
                {
                  "tag": "bk-add-new-button"
                },
                {
                  "properties": {
                    "content": "",
                    "clickConfig": {
                      "type": "event",
                      "actionConfig": {
                        "label": "filter",
                        "payload": {}
                      }
                    },
                    "type": "outlined",
                    "iconId": "FunnelPlotOutlined"
                  },
                  "tag": "bk-button"
                }
              ],
              "attributes": {
                "style": "display: flex; flex-direction: row; gap: 10px; padding: 0 20px;"
              }
            },
            {
              "tag": "div",
              "attributes": {
                "style": "width: 100%; display: flex; justify-content: space-between;"
              },
              "content": [
                {
                  "attributes": {
                    "style": "flex-grow: 1;"
                  },
                  "properties": {
                    "tabs": [
                      {
                        "key": "tab-1",
                        "title": "Tab 1"
                      }
                    ]
                  },
                  "tag": "bk-tabs"
                },
                {
                  "attributes": {
                    "style": "margin-right: 4px"
                  },
                  "properties": {
                    "dataSchema": {
                      "$ref": "#/definitions/dataSchema"
                    },
                    "filters": []
                  },
                  "tag": "bk-filters-manager"
                }
              ]
            }
          ],
          "tag": "header",
          "attributes": {
            "style": "display: flex; flex-direction: column; padding-top: 10px; background-color: white;"
          }
        },

        {
          "content": [
            {
              "properties": {
                "dataSchema": {
                  "$ref": "#/definitions/dataSchema"
                },
                "view": "month",
                "height": "70vh",
                "filtersName": {
                  "start": "Start",
                  "end": "End"
                }
              },
              "tag": "bk-calendar",
              "attributes": {
                "style": "background-color: white; padding: 1em; border-radius: 8px; display:flex; flex-direction: column; flex-grow: 1"
              }
            },
            {
              "tag": "bk-confirmation-modal"
            },
            {
              "properties": {
                "rootElementSelectors": "main.micro-lc-layout-content",
                "successEventMap": {
                  "create-data": {
                    "title": "Success",
                    "content": "Data successfully created",
                    "type": "success"
                  },
                  "update-data": {
                    "title": "Success",
                    "content": "Data successfully updated",
                    "type": "success"
                  },
                  "delete-data": {
                    "title": "Success",
                    "content": "Data successfully deleted",
                    "type": "success"
                  }
                },
                "errorEventMap": {
                  "create-data": {
                    "title": "Error",
                    "content": "An error occurred during order creation",
                    "type": "error"
                  },
                  "update-data": {
                    "title": "Error",
                    "content": "An error occurred during order updated",
                    "type": "error"
                  },
                  "delete-data": {
                    "title": "Error",
                    "content": "An error occurred during order deletion",
                    "type": "error"
                  }
                }
              },
              "tag": "bk-notifications",
              "attributes": {}
            }
          ],
          "tag": "main",
          "attributes": {
            "style": "flex-grow: 1; background-color: #f0f2f5; padding: 20px; overflow-y: auto;"
          }
        },

        {
          "content": [
            {
              "properties": {
                "requireConfirm": {
                  "onClose": true,
                  "onSave": true
                },
                "dataSchema": {
                  "$ref": "#/definitions/dataSchema"
                },
                "width": "60vw",
                "dataCustomActions": [
                  {
                    "hiddenOnInsert": true,
                    "label": "Delete",
                    "icon": "far fa-trash-alt",
                    "kind": "event",
                    "content": "delete-data",
                    "meta": {
                      "actionId": "delete-data"
                    },
                    "requireConfirm": true,
                    "closeOnClick": true
                  }
                ]
              },
              "tag": "bk-form-drawer"
            },
            {
              "properties": {
                "dataSchema": {
                  "$ref": "#/definitions/dataSchema"
                },
                "width": "40vw"
              },
              "tag": "bk-filter-drawer"
            }
          ],
          "tag": "aside"
        },

        {
          "content": [
            {
              "tag": "bk-bulk-delete"
            },
            {
              "tag": "bk-bulk-actions",
              "properties": {
                "dataSchema": {
                  "$ref": "#/definitions/dataSchema"
                }
              }
            },
            {
              "tag": "bk-footer",
              "attributes": {
                "style": "flex-grow: 1; display: flex; justify-content: end; align-items: center;"
              }
            },
            {
              "tag": "bk-pagination",
              "properties": {
                "pageSize": 10
              }
            }
          ],
          "tag": "footer",
          "attributes": {
            "style": "display: flex; flex-direction: row; flex-wrap: wrap; padding: 10px 20px; background-color: white; gap: 10px; position: sticky; bottom: 0; z-index: 10"
          }
        },

        {
          "properties": {
            "basePath": "/data-source-endpoint",
            "dataSchema": {
              "$ref": "#/definitions/dataSchema"
            }
          },
          "tag": "bk-crud-client"
        },
        {
          "properties": {
            "basePath": "/data-source-endpoint/export",
            "streamSaverIFrameSrc": "https://cdn.mia-platform.eu/backoffice/bk-web-components/{{BACK_KIT_VERSION}}/dist/export-service-worker.html",
            "dataSchema": {
              "$ref": "#/definitions/dataSchema"
            }
          },
          "tag": "bk-export"
        }
      ],
      "tag": "div",
      "attributes": {
        "style": "width: 100%; height: 100%; display: flex; flex-direction: column; position: relative;"
      }
    },
    "sources": [
      "https://cdn.mia-platform.eu/backoffice/bk-web-components/{{BACK_KIT_VERSION}}/dist/bk-web-components.esm.js"
    ]
  }
}
